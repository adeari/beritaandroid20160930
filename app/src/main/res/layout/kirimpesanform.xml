<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.widianta.myapplication.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/kirimpesanform"
    android:weightSum="1"
    android:layout_weight="1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:measureWithLargestChild="true">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Email"
            android:layout_height="wrap_content"
            android:id="@+id/emailKirimPesanLabel"
            android:layout_weight="1"
            android:layout_width="50dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailTextKirimPesan"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Judul"
            android:layout_height="wrap_content"
            android:id="@+id/judulpesanlabel"
            android:layout_weight="1"
            android:layout_width="50dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/judulTextKirimPesan"
            android:layout_weight="1" />
    </LinearLayout>

        <TextView
            android:text="Pesan"
            android:layout_height="wrap_content"
            android:id="@+id/pesanpesanlabel"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/pesanTextKirimPesan"
            android:gravity="top"
            android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kirimPesanprogressBar"
        android:indeterminate="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Kirim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonforsendpesan"
        android:background="@color/level_5" />

</LinearLayout>
